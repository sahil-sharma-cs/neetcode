
    /**
     * res always stays at the very start of the whole merged list.
     *
     * res.next points to the first real node of the merged list.
     *
     * We never move res.
     * 
     * hence we return res
     * 
     * in the end we attach the list which remains
     * @param list1
     * @param list2
     * @return
     */
    public ListNode mergeTwoLists(ListNode list1, ListNode list2) {

        ListNode res = new ListNode(0);
        ListNode tail = res;

        while(list1!=null && list2!=null) {

            if(list1.val >= list2.val) {
                tail.next = list2;
                list2 = list2.next;
            } else {
                tail.next = list1;
                list1 = list1.next;
            }
            tail = tail.next;
        }
        if(list1!=null)
            tail.next = list1;
        else
            tail.next = list2;
        return res.next;
    }
}
